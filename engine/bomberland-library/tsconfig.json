{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "lib",
        "inlineSourceMap": true,
        "resolveJsonModule": true,
        "lib": ["es6", "dom"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strict": true,
        "noUnusedLocals": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
    "exclude": ["node_modules", "src/**/*.spect.ts"]
}
